type Incident {
    key: ID!

    errorType: String!
    errorMessage: String!

    state: IncidentState!

    creationTime: Long
    resolveTime: Long

    workflowInstance: WorkflowInstance
    elementInstanceKey: Long!

    job: Job
}

enum IncidentState {
    CREATED
    RESOLVED
}

extend type Query {
    incident(key: ID!): Incident

    incidents(count: Int = 10, offset: Int = 0): [Incident!]!
}
