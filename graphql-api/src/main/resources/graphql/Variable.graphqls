type Variable {
    key: ID!
    name: String!
    value: String!
    workflowInstanceKey: ID!
    scopeKey: Long!
    timestamp: Long!

    updates: [VariableUpdate!]
}

type VariableUpdate {
    value: String!
    timestamp: Long!
}

extend type Query {
    variables(workflowInstanceKey: ID!): [Variable]
}
